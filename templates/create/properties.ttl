@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix schema: <http://schema.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix ex: <http://example.org/resource/> .

# Define properties with meaningful names and descriptions

ex:body a rdf:Property ;
    rdfs:label "Body Type"@en ;
    rdfs:comment "The Pokémon's body shape. Numbers corrospond to icons found here. Defaults to Unknown."@en ;
    rdfs:domain ex:Pokemon ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://example.org/resource/body> .

ex:catchrate a rdf:Property ;
    rdfs:label "Catch Rate"@en ;
    rdfs:comment "The Pokémon's catch rate."@en ;
    rdfs:domain ex:Pokemon ;
    rdfs:range xsd:integer ;
    rdfs:isDefinedBy <http://example.org/resource/catchrate> .

ex:category a rdf:Property ;
    rdfs:label "Category"@en ;
    rdfs:comment "Category name, from the Pokédex."@en ;
    rdfs:domain ex:Pokemon ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://example.org/resource/category> .
    
ex:color a rdf:Property ;
    rdfs:label "Color"@en ;
    rdfs:comment "The color listed in the Pokédex. Defaults to Unknown."@en ;
    rdfs:domain ex:Pokemon ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://example.org/resource/color> .

ex:eggcycles a rdf:Property ;
    rdfs:label "Egg Cycles"@en ;
    rdfs:comment "The number of egg cycles required for the Pokémon to hatch."@en ;
    rdfs:domain ex:Pokemon ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://example.org/resource/eggcycles> .

ex:egg_group a rdf:Property ;
    rdfs:label "Egg Group"@en ;
    rdfs:comment "The egg group classification for breeding purposes."@en ;
    rdfs:domain ex:Pokemon ;
    rdfs:range rdf:Resource ;
    rdfs:isDefinedBy <http://example.org/resource/egg_group> .

ex:egggroupn a rdf:Property ;
    rdfs:label "Egg Group Number"@en ;
    rdfs:comment "The numerical representation of the Pokémon's egg group."@en ;
    rdfs:domain ex:Pokemon ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://example.org/resource/egggroupn> .

ex:evtotal a rdf:Property ;
    rdfs:label "EV Total"@en ;
    rdfs:comment "The total Effort Values (EVs) of the Pokémon."@en ;
    rdfs:domain ex:Pokemon ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://example.org/resource/evtotal> .

ex:expyield a rdf:Property ;
    rdfs:label "Experience Yield"@en ;
    rdfs:comment "The amount of experience points yielded when the Pokémon is defeated."@en ;
    rdfs:domain ex:Pokemon ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://example.org/resource/expyield> .

ex:friendship a rdf:Property ;
    rdfs:label "Friendship Level"@en ;
    rdfs:comment "The base friendship value."@en ;
    rdfs:domain ex:Pokemon ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://example.org/resource/friendship> .

ex:generation a rdf:Property ;
    rdfs:label "Generation"@en ;
    rdfs:comment "The generation the Pokémon first appeared in. Don't use roman numerals."@en ;
    rdfs:domain ex:Pokemon ;
    rdfs:range xsd:integer ;
    rdfs:isDefinedBy <http://example.org/resource/generation> .

ex:lv100exp a rdf:Property ;
    rdfs:label "Level 100 Experience"@en ;
    rdfs:comment "The total experience required for the Pokémon to reach level 100."@en ;
    rdfs:domain ex:Pokemon ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://example.org/resource/lv100exp> .

ex:ndex a rdf:Property ;
    rdfs:label "National Pokédex Number"@en ;
    rdfs:comment "The Pokémon's National Pokédex number."@en ;
    rdfs:domain ex:Pokemon ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://example.org/resource/ndex> .

ex:oldexp a rdf:Property ;
    rdfs:label "Old Experience"@en ;
    rdfs:comment "The experience value used in previous generations."@en ;
    rdfs:domain ex:Pokemon ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://example.org/resource/oldexp> .

ex:pokefordex a rdf:Property ;
    rdfs:label "Pokédex Formatted Name"@en ;
    rdfs:comment "The formatted name used in the Pokédex for this Pokémon."@en ;
    rdfs:domain ex:Pokemon ;
    rdfs:range xsd:string ;
    rdfs:isDefinedBy <http://example.org/resource/pokefordex> .

ex:principal_form a rdf:Property ;
    rdfs:label "Principal Form"@en ;
    rdfs:comment "The main form of the Pokémon, including its abilities and attributes."@en ;
    rdfs:domain ex:Pokemon ;
    rdfs:range rdf:BlankNode ;
    rdfs:isDefinedBy <http://example.org/resource/principal_form> .

# Nested properties for forms
ex:ability a rdf:Property ;
    rdfs:label "Ability"@en ;
    rdfs:comment "The Pokémon's primary ability."@en ;
    rdfs:domain ex:principal_form ;
    rdfs:range rdf:Resource ;
    rdfs:isDefinedBy <http://example.org/resource/ability> .

ex:height a rdf:Property ;
    rdfs:label "Height"@en ;
    rdfs:comment "The height of the Pokémon."@en ;
    rdfs:domain ex:principal_form ;
    rdfs:range schema:QuantitativeValue ;
    rdfs:isDefinedBy <http://example.org/resource/height> .

ex:weight a rdf:Property ;
    rdfs:label "Weight"@en ;
    rdfs:comment "The weight of the Pokémon."@en ;
    rdfs:domain ex:principal_form ;
    rdfs:range schema:QuantitativeValue ;
    rdfs:isDefinedBy <http://example.org/resource/weight> .
